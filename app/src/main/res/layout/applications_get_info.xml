<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.thirdmadman.tgu.MyCabinet"

    >

    <RelativeLayout
        android:id="@+id/applications_get_info_cabinet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/application_background"
            android:visibility="visible">

            <TextView
                android:id="@+id/applications_get_info_greeting_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Заявка номер"
                android:textAlignment="viewStart"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/applications_get_info_req_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:text=""

                android:textAlignment="viewStart"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/applications_get_info_req_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="75dp"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="98dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="25dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/application_get_info_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Статус:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/application_get_info_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/application_get_info_status_text"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:id="@+id/application_get_info_department_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Отдел:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/application_get_info_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/application_get_info_department_text"
                android:text=""
                android:textSize="16sp" />
            <TextView
                android:id="@+id/application_get_info_executor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:text="Исполнитель:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/application_get_info_executor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="120dp"
                android:layout_toRightOf="@+id/application_get_info_executor_text"
                android:text=""
                android:textSize="16sp" />

            <TextView
            android:id="@+id/application_get_info_desc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="Описание:"
            android:textSize="16sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="180dp"
                >

                <TextView
                    android:id="@+id/application_get_info_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp" />
            </ScrollView>

            <TextView
                android:id="@+id/application_get_info_solution_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="310dp"
                android:text="Решение:"
                android:textSize="16sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="330dp">

                <TextView
                    android:id="@+id/application_get_info_solutin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text=""
                    android:textSize="16sp" />
            </ScrollView>

        </RelativeLayout>

        <TextView
            android:id="@+id/applications_noactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Нет активных заявок"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:visibility="invisible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/applicationsget_info_anon_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:visibility="invisible">


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/application_get_info_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

</android.widget.RelativeLayout>